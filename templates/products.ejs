<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head'); %>
</head>

<body>
    <div class="container">
        <div class="text-center">
            <a href="/logout" class="btn btn-primary -5" role="button">Logi välja</a>
            <a href="/dashboard" class="btn btn-primary -5" role="button">Home</a>
            <a href="/products" class="btn btn-primary -5" role="button">Tooted</a>
        </div>
    </div>
    <div class="container">
        <table class="table table-striped table-primary">
            <thead>
                <tr>
                    <th>TÜÜP</th>
                    <th>NIMETUS</th>
                    <th>SUURUS</th>
                    <th>ÜHIK</th>
                    <th>VÄRV</th>
                    <th>KIRJELDUS</th>
                    <th>HIND</th>
                </tr>
            </thead>
            <tbody>
                <%if (records.length>0){ %>
                    <% records.forEach(function(row){ %>
                        <tr>
                            <td>
                                <%= row.type %>
                            </td>
                            <td>
                                <%= row.productName %>
                            </td>
                            <td>
                                <%= row.size %>
                            </td>
                            <td>
                                <%= row.sizeUnit %>
                            </td>
                            <td>
                                <%= row.colour %>
                            </td>
                            <td>
                                <%= row.description %>
                            </td>
                            <td>
                                <%= row.price %>
                            </td>
                        </tr>
                        <% })}else{ %>
                            <tr>
                                <td colspan="6">Tooteid ei leitud!</td>
                            </tr>
                            <% } %>
            </tbody>
        </table>
    </div>

    <%- include('./partials/scripts'); %>
</body>

</html>